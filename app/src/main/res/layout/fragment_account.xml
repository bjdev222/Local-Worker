<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.40"
        android:orientation="vertical"
        android:id="@+id/profileImagell"
        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

    </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.60"
        android:orientation="vertical"
        android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Log in"
                android:layout_margin="10dp"
                android:id="@+id/name"
                android:textSize="25sp"
                android:fontFamily="@font/gb"
                android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Log in to your account"
                android:layout_margin="10dp"
                android:id="@+id/verify"
                android:textSize="19sp"
                android:fontFamily="@font/gb"
                android:layout_height="wrap_content"></TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ep"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="5dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.90"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Edit Profile"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:fontFamily="@font/gb"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="You can edit your profile from here "
                android:textSize="16sp"
                android:fontFamily="@font/gr"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"></TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/right"

                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/bw"
        android:visibility="gone"

        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="5dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Be a worker"
                    android:layout_margin="3dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gb"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Edit your worker profile from here "
                    android:textSize="16sp"
                    android:fontFamily="@font/gr"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"></TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/right"

                    android:layout_height="wrap_content"></ImageView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="5dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/help"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Help and Support"
                    android:layout_margin="3dp"
                    android:textSize="22sp"
                    android:id="@+id/title"
                    android:fontFamily="@font/gb"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Help and support section"
                    android:id="@+id/uname"
                    android:textSize="16sp"
                    android:fontFamily="@font/gr"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"></TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/right"
                    android:id="@+id/next"

                    android:layout_height="wrap_content"></ImageView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:text="Login Register"
            android:id="@+id/login"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:text="Logout"
            android:id="@+id/logout"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>


</LinearLayout>